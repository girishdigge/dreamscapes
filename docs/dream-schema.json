{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Dream Scene Schema",
  "required": ["id", "title", "style"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "style": {
      "type": "string",
      "enum": ["ethereal", "cyberpunk", "surreal", "fantasy", "nightmare"]
    },
    "seed": { "type": "integer" },
    "environment": {
      "type": "object",
      "properties": {
        "preset": { "type": "string" },
        "fog": { "type": "number", "minimum": 0, "maximum": 1 },
        "skyColor": { "type": "string" },
        "ambientLight": { "type": "number" }
      }
    },
    "structures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "template", "pos"],
        "properties": {
          "id": { "type": "string" },
          "template": { "type": "string" },
          "pos": { "type": "array", "items": { "type": "number" } },
          "scale": { "type": "number" },
          "rotation": { "type": "array" },
          "features": { "type": "array" }
        }
      }
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "count": { "type": "integer" },
          "params": { "type": "object" }
        }
      }
    },
    "cinematography": {
      "type": "object",
      "required": ["durationSec", "shots"],
      "properties": {
        "durationSec": { "type": "number" },
        "shots": { "type": "array" }
      }
    },
    "render": { "type": "object" },
    "assumptions": { "type": "array" }
  }
}
