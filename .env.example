# Dreamscapes Environment Configuration
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# Enhanced Cerebras API Configuration (Primary LLM with Official SDK)
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_API_URL=https://api.cerebras.ai/v1/chat/completions
CEREBRAS_MODEL=llama-3.3-70b
CEREBRAS_TEMPERATURE=0.6
CEREBRAS_TOP_P=0.9
CEREBRAS_MAX_TOKENS=32768
CEREBRAS_STREAM=true

# Enhanced OpenAI API Configuration (Fallback Provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Internal Service URLs (for Docker network)
MCP_GATEWAY_URL=http://mcp-gateway:8080
LLAMA_URL=http://llama-stylist:8000
RENDER_WORKER_URL=http://render-worker:8001


# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Enhanced Redis Configuration for AI Provider Caching
REDIS_URL=redis://redis:6379
REDIS_MAX_MEMORY=512mb
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=10000
CACHE_ENABLE_SEMANTIC_SIMILARITY=true
CACHE_QUALITY_THRESHOLD=0.8


# Enhanced Provider Management Configuration
PROVIDER_FALLBACK_ENABLED=true
PROVIDER_RETRY_ATTEMPTS=3
PROVIDER_RETRY_DELAY=1000
PROVIDER_TIMEOUT=30000
PROVIDER_CIRCUIT_BREAKER_THRESHOLD=5

# Enhanced Monitoring and Metrics Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000
LOG_LEVEL=info

# Optional: Render Worker Configuration
RENDER_WORKER_URL=http://render-worker:8001
FFMPEG_PATH=/usr/bin/ffmpeg

# Demo Configuration
ENABLE_FALLBACK_DEMOS=true
MAX_CACHE_SIZE=1000
DEFAULT_RENDER_QUALITY=draft
CACHE_TTL=3600000

# Network Timeout Configuration (in milliseconds)
MCP_TIMEOUT_MS=45000
HEALTH_CHECK_TIMEOUT_MS=5000
LONG_OPERATION_TIMEOUT_MS=60000

# Retry Configuration
MCP_MAX_RETRIES=2
MCP_RETRY_BASE_DELAY=1000
MCP_RETRY_MAX_DELAY=10000
MCP_RETRY_BACKOFF_MULTIPLIER=2.0

# Circuit Breaker Configuration (Legacy - kept for compatibility)
MCP_CIRCUIT_BREAKER_THRESHOLD=5
MCP_CIRCUIT_BREAKER_TIMEOUT=60000
MCP_CIRCUIT_BREAKER_MONITORING=10000