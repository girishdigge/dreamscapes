# Production Environment Configuration
# Optimized for performance, reliability, and security

# Node Environment
NODE_ENV=production

# Enhanced Cerebras Configuration for Production
CEREBRAS_API_KEY=${CEREBRAS_API_KEY}
CEREBRAS_API_URL=https://api.cerebras.ai/v1
CEREBRAS_MODEL=llama-3.3-70b
CEREBRAS_TEMPERATURE=0.6
CEREBRAS_TOP_P=0.9
CEREBRAS_MAX_TOKENS=32768
CEREBRAS_STREAM=true

# OpenAI Configuration for Production
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4

# Production Service URLs
MCP_GATEWAY_URL=http://mcp-gateway:8080
LLAMA_URL=http://llama-stylist:8000
RENDER_WORKER_URL=http://render-worker:8001

# Production Frontend Configuration
NEXT_PUBLIC_API_URL=${FRONTEND_API_URL}
FRONTEND_URL=${FRONTEND_URL}

# Production Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_MEMORY=1gb
CACHE_DEFAULT_TTL=7200
CACHE_MAX_SIZE=50000
CACHE_ENABLE_SEMANTIC_SIMILARITY=true
CACHE_QUALITY_THRESHOLD=0.85

# Production Provider Management
PROVIDER_FALLBACK_ENABLED=true
PROVIDER_RETRY_ATTEMPTS=5
PROVIDER_RETRY_DELAY=2000
PROVIDER_TIMEOUT=45000
PROVIDER_CIRCUIT_BREAKER_THRESHOLD=3

# Production Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=120000
LOG_LEVEL=warn

# Production Demo Configuration
ENABLE_FALLBACK_DEMOS=false
MAX_CACHE_SIZE=5000
DEFAULT_RENDER_QUALITY=high
CACHE_TTL=7200000

# Production Timeout Configuration
MCP_TIMEOUT_MS=60000
HEALTH_CHECK_TIMEOUT_MS=10000
LONG_OPERATION_TIMEOUT_MS=120000

# Production Retry Configuration
MCP_MAX_RETRIES=5
MCP_RETRY_BASE_DELAY=2000
MCP_RETRY_MAX_DELAY=15000
MCP_RETRY_BACKOFF_MULTIPLIER=2.5

# Production Circuit Breaker Configuration
MCP_CIRCUIT_BREAKER_THRESHOLD=3
MCP_CIRCUIT_BREAKER_TIMEOUT=90000
MCP_CIRCUIT_BREAKER_MONITORING=15000

# Production Security Configuration
SECURE_HEADERS=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000