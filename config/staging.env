# Staging Environment Configuration
# Production-like environment for testing

# Node Environment
NODE_ENV=staging

# Enhanced Cerebras Configuration for Staging
CEREBRAS_API_KEY=${CEREBRAS_API_KEY}
CEREBRAS_API_URL=https://api.cerebras.ai/v1
CEREBRAS_MODEL=llama-3.3-70b
CEREBRAS_TEMPERATURE=0.6
CEREBRAS_TOP_P=0.9
CEREBRAS_MAX_TOKENS=32768
CEREBRAS_STREAM=true

# OpenAI Configuration for Staging
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4

# Staging Service URLs
MCP_GATEWAY_URL=http://mcp-gateway:8080
LLAMA_URL=http://llama-stylist:8000
RENDER_WORKER_URL=http://render-worker:8001

# Staging Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Staging Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_MEMORY=512mb
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=25000
CACHE_ENABLE_SEMANTIC_SIMILARITY=true
CACHE_QUALITY_THRESHOLD=0.8

# Staging Provider Management
PROVIDER_FALLBACK_ENABLED=true
PROVIDER_RETRY_ATTEMPTS=4
PROVIDER_RETRY_DELAY=1500
PROVIDER_TIMEOUT=35000
PROVIDER_CIRCUIT_BREAKER_THRESHOLD=5

# Staging Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=90000
LOG_LEVEL=info

# Staging Demo Configuration
ENABLE_FALLBACK_DEMOS=false
MAX_CACHE_SIZE=2500
DEFAULT_RENDER_QUALITY=standard
CACHE_TTL=5400000

# Staging Timeout Configuration
MCP_TIMEOUT_MS=40000
HEALTH_CHECK_TIMEOUT_MS=8000
LONG_OPERATION_TIMEOUT_MS=75000

# Staging Retry Configuration
MCP_MAX_RETRIES=3
MCP_RETRY_BASE_DELAY=1000
MCP_RETRY_MAX_DELAY=8000
MCP_RETRY_BACKOFF_MULTIPLIER=2.0

# Staging Circuit Breaker Configuration
MCP_CIRCUIT_BREAKER_THRESHOLD=5
MCP_CIRCUIT_BREAKER_TIMEOUT=45000
MCP_CIRCUIT_BREAKER_MONITORING=7500