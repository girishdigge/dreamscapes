# Development Environment Configuration
# Optimized for fast development and debugging

# Node Environment
NODE_ENV=development

# Enhanced Cerebras Configuration for Development
CEREBRAS_API_KEY=${CEREBRAS_API_KEY}
CEREBRAS_API_URL=https://api.cerebras.ai/v1
CEREBRAS_MODEL=llama-4-maverick-17b-128e-instruct
CEREBRAS_TEMPERATURE=0.7
CEREBRAS_TOP_P=0.9
CEREBRAS_MAX_TOKENS=16384
CEREBRAS_STREAM=true

# OpenAI Configuration for Development
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4

# Development Service URLs
MCP_GATEWAY_URL=http://mcp-gateway:8080
LLAMA_URL=http://llama-stylist:8000
RENDER_WORKER_URL=http://render-worker:8001

# Development Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Development Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_MEMORY=256mb
CACHE_DEFAULT_TTL=1800
CACHE_MAX_SIZE=1000
CACHE_ENABLE_SEMANTIC_SIMILARITY=false
CACHE_QUALITY_THRESHOLD=0.7

# Development Provider Management
PROVIDER_FALLBACK_ENABLED=true
PROVIDER_RETRY_ATTEMPTS=2
PROVIDER_RETRY_DELAY=500
PROVIDER_TIMEOUT=15000
PROVIDER_CIRCUIT_BREAKER_THRESHOLD=10

# Development Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=30000
LOG_LEVEL=debug

# Development Demo Configuration
ENABLE_FALLBACK_DEMOS=true
MAX_CACHE_SIZE=100
DEFAULT_RENDER_QUALITY=draft
CACHE_TTL=1800000

# Development Timeout Configuration
MCP_TIMEOUT_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000
LONG_OPERATION_TIMEOUT_MS=45000

# Development Retry Configuration
MCP_MAX_RETRIES=2
MCP_RETRY_BASE_DELAY=500
MCP_RETRY_MAX_DELAY=5000
MCP_RETRY_BACKOFF_MULTIPLIER=1.5

# Development Circuit Breaker Configuration
MCP_CIRCUIT_BREAKER_THRESHOLD=10
MCP_CIRCUIT_BREAKER_TIMEOUT=30000
MCP_CIRCUIT_BREAKER_MONITORING=5000